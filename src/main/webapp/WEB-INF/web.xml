        </init-param>
        -->
        <init-param>
            <param-name>http://graphity.org/gp#datasetLocation</param-name>
            <param-value>/org/graphity/processor/dataset/dataset.trig</param-value>
        </init-param>
        <init-param>
            <param-name>http://graphity.org/gp#sitemap</param-name>
            <param-value>http://graphity.org/gps#</param-value>
        </init-param>
        <init-param>
            <param-name>http://graphity.org/gp#templatesQuery</param-name>
            <param-value><![CDATA[
PREFIX gp:	<http://graphity.org/gp#>
PREFIX rdf:     <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
PREFIX owl:	<http://www.w3.org/2002/07/owl#>
PREFIX rdfs:	<http://www.w3.org/2000/01/rdf-schema#>
PREFIX sioc:	<http://rdfs.org/sioc/ns#>

SELECT *
{
    # ?Template rdfs:subClassOf* foaf:Document
    ?Template a owl:Class, gp:Template ;
        rdfs:isDefinedBy ?isDefinedBy ;
        gp:query ?query ;
        gp:uriTemplate ?uriTemplate .
    FILTER (?Template != gp:SPARQLEndpoint)
    FILTER (?Template != gp:GraphStore)
    FILTER (isURI(?query) || isBlank(?query))
    FILTER isLiteral(?uriTemplate)
    OPTIONAL {
        ?Template rdfs:subClassOf ?Restriction .
        ?Restriction a owl:Restriction ;
            owl:onProperty ?onProperty .
        # ?onProperty a owl:ObjectProperty .
        {
            ?Restriction owl:allValuesFrom ?allValuesFrom
        }
        UNION
        {
            ?Restriction owl:allValuesFrom [ a owl:Class ;
                owl:unionOf [
                    rdf:rest*/rdf:first ?allValuesFrom
                ]
            ]
        }
    }
}
]]></param-value>
        </init-param>
        <!--
        <init-param>
            <param-name>http://graphity.org/gp#cacheSitemap</param-name>
            <param-value>false</param-value>
        </init-param>
        -->
        <init-param>
            <param-name>http://graphity.org/g#resultLimit</param-name>
            <param-value>100</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
</web-app>